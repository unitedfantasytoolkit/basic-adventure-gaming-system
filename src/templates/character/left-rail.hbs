{{#*inline "employment-details"}}
  <dl>
    <dt>Employed by</dt>
    <dd>{{document.system.retainer.employer}}</dd>

    {{#if document.system.retainer.wage.quantity}}
      <dt>Wage</dt>
      <dd>{{document.system.retainer.wage.quantity}}/month</dd>
    {{/if}}
  </dl>
{{/inline}}

