{{#*inline "action-item"}}
  <div class="action-source">
    <div class="action-source__header">
      <img class="action-source__icon" src="{{img}}" alt="">
      <h4 class="action-source__name">{{name}}</h4>
    </div>
    <div class="action-source__actions">
      {{#each system.actions}}
        {{> action-button parent=../parent}}
      {{/each}}
    </div>
  </div>
{{/inline}}

