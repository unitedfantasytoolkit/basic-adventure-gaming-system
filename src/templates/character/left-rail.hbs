{{#*inline "character-identity"}}
    <div class="left-rail__section left-rail__section--portrait">
      <img src="{{document.img}}" alt="" />
      <h2 class="decorated">{{document.name}}</h3>
    </div>
  <div class="left-rail__section">
    <dl>
      <dt>{{localize "BAGS.Actors.Character.Identity.Alignment"}}</dt>
      <dd>{{ifThen document.system.biographicalDetails.alignment
            document.system.biographicalDetails.alignment
            (localize "BAGS.Actors.Character.Identity.Unaligned")
          }}
      </dd>
    </dl>
  </div>
  {{#if (eq document.type "character")}}
    <div class="left-rail__section left-rail__section--character-classes">
      <h3 class="decorated">
        {{localize
          (ifThen (gt classes.length 1)
            "BAGS.Actors.Character.Identity.Classes"
            "BAGS.Actors.Character.Identity.Class"
          )
        }}</h3>
      <ul class="character-classes">
        {{#each classes}}
          <li class="character-class">{{> character-class this}}</li>
        {{else}}
          <p class="empty">{{localize "BAGS.Actors.Character.NoClasses"}}</p>
        {{/each}}
      </ul>
    </div>
  {{/if}}

{{/inline}}

