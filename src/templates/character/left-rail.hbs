{{!--
  Character Class
  ---
  A widget that renders a character class, its level, and current/next level XP.
--}}
{{#*inline "character-class"}}
  <article aria-label="Level {{system.level}} {{name}}">
    <img
      src="{{img}}"
      class="document-art"
      alt=""
    />
    <div class="character-class__name">
        Lv. {{system.level}} {{name}}
    </div>
    <uft-character-info-meter
      value="{{xpBar.current}}"
      max="{{xpBar.max}}"
      class="xp"
    >
    </uft-character-info-meter>
  </article>
{{/inline}}

