{{#*inline "monster-details"}}
  <div class="left-rail__section left-rail__section--monster-details">
    <h3 class="decorated">Monster Details</h3>
    <dl>
      <dt>{{localize "BAGS.Actors.Monster.Details.Alignment.Label"}}</dt>
      <dd>{{ifThen document.system.biographicalDetails.alignment document.system.biographicalDetails.alignment (localize "BAGS.Actors.Monster.Details.Alignment.Unaligned")}}</dd>

      {{#if document.system.biographicalDetails.intelligence}}
      <dt>{{localize "BAGS.Actors.Monster.Details.Intelligence"}}</dt>
      <dd>{{document.system.biogrpahicalDetails.intelligence}}</dd>
      {{/if}}

      <dt>{{localize "BAGS.Actors.Monster.Details.NumberAppearing"}}</dt>
      <dd>TODO</dd>

      <dt>{{localize "BAGS.Actors.Monster.Details.MoraleRating"}}</dt>
      <dd class="rollable rollable--icon-before" data-action="roll-morale">{{document.system.morale.value}}</dd>

      <dt>Treasure Table</dt>
      <dd class="rollable" data-action="roll-morale">TODO</dd>
    </dl>
  </div>
{{/inline}}


