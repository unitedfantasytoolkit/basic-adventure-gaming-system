{{#*inline "combat-modifiers"}}
  <div class="left-rail__section">
    <dl>
      {{#if (eq document.type "monster")}}
        {{#with document.system.hp.hitDice}}
          {{#if usesHitDice}}
            <dt>Hit Dice</dt>
            <dd class="rollable rollable--icon-before" data-action="roll-hp">{{count}}d{{size}}{{ifThen modifier (signNumber modifier) ""}}</dd>
          {{/if}}
        {{/with}}
      {{/if}}
      {{#if usesDescendingAC}}
      <dt class="{{#if combatModifications.thac0}}field--{{combatModifications.thac0}}{{/if}}">THAC0</dt>
      <dd class="{{#if combatModifications.thac0}}field--{{combatModifications.thac0}}{{/if}}">{{document.system.thac0}}</dd>
      {{else}}
      <dt class="{{#if combatModifications.baseAttackBonus}}field--{{combatModifications.baseAttackBonus}}{{/if}}">Attack Bonus</dt>
      <dd class="{{#if combatModifications.baseAttackBonus}}field--{{combatModifications.baseAttackBonus}}{{/if}}">{{signNumber document.system.baseAttackBonus forceSign=true}}</dd>
      {{/if}}

      <dt class="{{#if combatModifications.ac}}field--{{combatModifications.ac}}{{/if}}">Armor Class</dt>
      <dd class="{{#if combatModifications.ac}}field--{{combatModifications.ac}}{{/if}}">{{document.system.armorClass}}</dd>

      <dt class="movement">Movement</dt>
      {{#if (eq document.type "character")}}
        <dd>
          {{#with document.system.speed}}
            {{exploration}}/{{encounter}}/{{overland}}
          {{/with}}
        </dd>
      {{else}}
        <dd>
          {{#with document.system.speed}}
            {{exploration}} ({{encounter}})
          {{/with}}
        </dd>
      {{/if}}
    </dl>
  </div>

  {{#if (eq document.type "character")}}
  <div class="left-rail__section left-rail__section--combat">
    <header>
      <h3>{{localize "BAGS.Actors.Common.Combat.Modifiers"}}</h3>
      <span>{{localize "BAGS.Actors.Common.Combat.Attack"}}</span>
      <span>{{localize "BAGS.Actors.Common.Combat.Damage"}}</span>
    </header>

    <dl>
      <dt class="rollable rollable--icon-before {{#if combatModifications.meleeAttack}}field--{{combatModifications.meleeAttack}}{{/if}}" data-action="roll-attack" data-attack-type="melee">{{localize "BAGS.Actors.Common.Combat.Melee"}}</dt>
      <dd class="{{#if combatModifications.meleeAttack}}field--{{combatModifications.meleeAttack}}{{/if}}">{{signNumber document.system.meleeAttackBonus forceSign=true}}</dd>
      <dd class="{{#if combatModifications.meleeDamage}}field--{{combatModifications.meleeDamage}}{{/if}}">{{signNumber document.system.meleeDamageBonus forceSign=true}}</dd>
      <dt class="rollable rollable--icon-before {{#if combatModifications.missileAttack}}field--{{combatModifications.missileAttack}}{{/if}}" data-action="roll-attack" data-attack-type="missile">{{localize "BAGS.Actors.Common.Combat.Missile"}}</dt>
      <dd class="{{#if combatModifications.missileAttack}}field--{{combatModifications.missileAttack}}{{/if}}">{{signNumber document.system.missileAttackBonus forceSign=true}}</dd>
      <dd class="{{#if combatModifications.missileDamage}}field--{{combatModifications.missileDamage}}{{/if}}">{{signNumber document.system.missileDamageBonus forceSign=true}}</dd>
    </dl>
  </div>
  {{/if}}
{{/inline}}

{{!-- ===================================================================== --}}

{{!--

--}}
{{#*inline "saving-throws"}}
  <div class="left-rail__section left-rail__section--saving-throws">
    <h3 class="decorated">Saving Throws</h3>
    <dl>
      {{#each savingThrowLocaleStrings as |save key|}}
        <dt data-tooltip="{{lookup ../savingThrowTooltips key}}" class="rollable rollable--icon-before {{#if (lookup ../savingThrowModifications key)}}field--{{lookup ../savingThrowModifications key}}{{/if}}" data-action="roll-saving-throw" data-saving-throw="{{key}}">{{localize save.short}}</dt>
        <dd class="{{#if (lookup ../savingThrowModifications key)}}field--{{lookup ../savingThrowModifications key}}{{/if}}">{{lookup ../document.system.savingThrows key}}</dd>
      {{/each}}
      {{#if (eq document.type "character")}}
        <dt>Bonus vs. Magic</dt>
        <dd>
          {{signNumber document.system.abilityScores.wis.magicSave forceSign=true}}
        </dd>
      {{/if}}

      {{#if (and (eq document.type "monster") document.system.magicResistance) }}
        <dt>Magic Resistance</dt>
        <dd>75%</dd>
      {{/if}}
    </dl>
  </div>
{{/inline}}

{{!-- ===================================================================== --}}

