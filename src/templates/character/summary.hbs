<article
  class="tab character-class-sheet-{{tab.id}} {{tab.cssClass}}{{ifThen tab.active " active" ""}}"
  data-tab="{{tab.id}}"
  data-group="{{tab.group}}"
>

{{#*inline "action-card"}}
<button 
  class="action-card" 
  data-action-id="{{id}}"
  data-tooltip="{{localize description}}"
  {{#if flags.isBlind}}data-blind{{/if}}
  aria-label="{{localize name}}"
>
  <img class="action-card__icon" src="{{img}}" alt="" />
  <span class="action-card__title">{{localize name}}</span>
</button>
{{/inline}}

{{#*inline "action-group"}}
{{#if items.length}}
<section class="action-group" data-group-type="{{type}}">
  <header class="action-group__header">
    <h3 class="action-group__title">{{localize title}}</h3>
  </header>
  
  <div class="action-group__grid" role="list">
    {{#each items}}
    <div class="action-source" data-uuid="{{uuid}}" data-item-id="{{id}}" role="listitem">
      {{#if actions.length}}
        {{#each actions}}
          {{> action-card}}
        {{/each}}
      {{/if}}
    </div>
    {{/each}}
  </div>
</section>
{{/if}}
{{/inline}}

<div class="action-dashboard">
  {{#with actor.actions}}
    
    {{#if builtins.length}}
    {{> action-group 
      type="builtin"
      title="BAGS.Actions.Builtin"
      items=builtins
    }}
    {{/if}}

    {{#if weapon.length}}
    {{> action-group
      type="weapon"
      title="BAGS.Actions.Weapons"
      items=weapon
    }}
    {{/if}}

    {{#if armor.length}}
    {{> action-group
      type="armor" 
      title="BAGS.Actions.Armor"
      items=armor
    }}
    {{/if}}

    {{#if item.length}}
    {{> action-group
      type="item"
      title="BAGS.Actions.Items"
      items=item
    }}
    {{/if}}

    {{#if ability.length}}
    {{> action-group
      type="ability"
      title="BAGS.Actions.Abilities" 
      items=ability
    }}
    {{/if}}

  {{/with}}
</div>

  {{#if actor.items.documentsByType.spell.length}}
  <div class="spell-slots">
    <h3>Prepared Spells</h3>
    <ol class="item-grid item-grid--spell-slots">
    </ol>
  </div>
  {{/if}}

  <div class="abilities">
    <h3>Abilities</h3>
    <ul class="item-grid item-grid--abilities">
    </ul>
  </div>

  <div class="equipment">
    <h3>Equipped Items</h3>
    <ul class="item-grid item-grid--equipment">
    </ul>
  </div>

  <div class="favorites">
    <h3>Favorites</h3>
    <ul class="item-grid item-grid--favorites">
    </ul>
  </div>
</article>
