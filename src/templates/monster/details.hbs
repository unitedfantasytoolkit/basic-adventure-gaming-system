{{#> sheetTab}}
<h2>{{localize "BAGS.Items.Miscellaneous.Tabs.Details"}}</h2>
{{log systemFields}}
<div class="scrollable">
  <div class="standard-form">
    {{formGroup fields.name value=document.name hint=""}}

    
    <fieldset class="standard-form__field-group">
      <legend>Hit Dice</legend>

      {{formGroup systemFields.hp.fields.hitDice.fields.count value=document.system.hp.hitDice.count hint="" localize=true}}
      {{formGroup systemFields.hp.fields.hitDice.fields.size value=document.system.hp.hitDice.size hint="" localize=true}}
      {{formGroup systemFields.hp.fields.hitDice.fields.modifier value=document.system.hp.hitDice.modifier hint="" localize=true}}

      <button class="icon inline-control" data-tooltip="Update Stats to Match Hit Dice" data-action="update-stats-via-hit-dice"><i class="fa fa-dice-d20"></i></button>
    </fieldset>

    {{formGroup systemFields.base.fields.speed value=document.system.base.speed localize=true}}

    {{formGroup systemFields.xp value=document.system.xp localize=true}}

    <div class="form-group">
      {{#if (ne document.system.baseAttackBonus null)}}
        <label>Attack Bonus</label>
        <div class="form-fields">
          <input type="number" name="baseAttackBonus" value="{{document.system.baseAttackBonus}}" />
        </div>
        <p class="hint">This creature's bonus to attack rolls</p>
      {{else if (ne document.system.thac0 null)}}
        <label>THAC0</label>
        <div class="form-fields">
          <input type="number" name="thac0" value="{{document.system.thac0}}" />
        </div>
        <p class="hint">The result on a d20 necessary for this creature to hit an armor class of zero</p>
      {{else}}
        <p class="empty">Error finding your attack modifier scheme; please report a bug!</p>
      {{/if}}
    </div>

    <fieldset class="standard-form__field-group">
      <legend>Hit Points</legend>
      {{formGroup systemFields.hp.fields.value value=document.system.hp.value localize=true}}
      {{formGroup systemFields.hp.fields.max value=document.system.hp.max localize=true}}
      {{formGroup systemFields.hp.fields.temporary value=document.system.hp.temporary localize=true}}
    </fieldset>

    <fieldset class="standard-form__field-group">
      <legend>Saving Throws</legend>
      {{#each systemFields.base.fields.savingThrows.fields}}
        {{formGroup this value=(lookup ../document.system.base.savingThrows this.name) localize=true}}
      {{/each}}
    </fieldset>
    
    <fieldset>
      <legend>Morale</legend>

      {{formGroup systemFields.morale.fields.value value=document.system.morale.value localize=true}}
      {{formGroup systemFields.morale.fields.isWorthPanickingOverDying value=document.system.morale.isWorthPanickingOverDying localize=true}}
    </fieldset>

  {{!--
    {{formGroup systemFields.quantity value=document.system.quantity localize=true}}
    {{formGroup systemFields.weight value=document.system.weight localize=true}}
    {{formGroup systemFields.uses.fields.value value=document.system.uses.value localize=true}}
    {{formGroup systemFields.uses.fields.max value=document.system.uses.max localize=true}}
    {{formGroup systemFields.countsAsTreasure value=document.system.countsAsTreasure localize=true}}
  --}}
  </div>
</div>
{{/sheetTab}}
