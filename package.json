{
  "name": "basic-adventure-gaming-system",
  "version": "0.0.0",
  "scripts": {
    "build": "npm-run-all -p  build:js build:css",
    "build:js": "rollup --config ./rollup.config.js",
    "build:css": "postcss src/index.css -o dist/bags.css",
    "start": "npm-run-all -p watch:js watch:css",
    "watch:js": "rollup --config ./rollup.config.js --watch",
    "watch:css": "postcss src/index.css -o dist/bags.css --watch",
    "prepare": "husky install"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "wyrmisis",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@typhonjs-fvtt/eslint-config-foundry.js": "^0.8.0",
    "autoprefixer": "^10.4.7",
    "babel-eslint": "^10.1.0",
    "cssnano": "^5.1.7",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-ecmascript-compat": "^3.2.1",
    "eslint-plugin-jsdoc": "^50.2.4",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-inherit": "^4.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-reporter": "^7.0.5",
    "prettier": "^3.3.3",
    "rollup": "^2.72.1",
    "rollup-plugin-copy-assets": "^2.0.3",
    "rollup-plugin-import-css": "^3.5.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0"
  },
  "prettier": {
    "bracketSameLine": false,
    "singleAttributePerLine": true
  },
  "type": "module",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
